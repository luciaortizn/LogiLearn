<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_logilearn"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_logilearn"
        android:supportsRtl="true"
        android:theme="@style/Theme.LogiLearnApp"
        tools:targetApi="31">
        <activity
            android:name=".EmptyEditableCard"
            android:exported="false" />
        <activity
            android:name=".ui.common.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.Register"
            android:exported="false" />
        <activity
            android:name=".ui.auth.Login"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>
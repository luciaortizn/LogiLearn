<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.LogiLearnApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:fontFamily">@font/archivo</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_light</item>
        <item name="colorSecondaryVariant">@color/yellow_neon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.LogiLearnApp" parent="Base.Theme.LogiLearnApp" />

    <style name="DividerStyle">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:background">@color/blue_light</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/AppBarTextStyle.Light</item>
    </style>

    <style name="AppBarTextStyle.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:tint">@color/black</item> <!-- Color de los iconos -->
    </style>
    <!--para los input texts-->
    <style name="TextInputEditTexCustom">
        <item name="boxStrokeColor">@color/blue_dark</item>
        <item name="hintTextColor">@color/blue_dark</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>
    <!--para el login y registro-->
    <style name="BackgroundColorsForAuth">
        <item name="android:background">@color/blue_light</item>
    </style>
    <!--para diseÃ±o de botones customizados-->
    <style name="LargeButtonsCustom" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:backgroundTint">@color/yellow_light</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>
    <style name="LargeButtonsCustom1" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:backgroundTint">@color/red_light</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>
    <style name="ElevatedButtonCustom" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/yellow_light</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>
    <!--textos-->
    <style name="TextViewCustomTitle1" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:textColor">@color/blue_dark</item>
    </style>
    <!--chip-->
    <style name="ChipCustom">
        <item name="android:textColor">@color/blue_dark</item>
        <item name="android:backgroundTint">@color/blue_light</item>
    </style>
    <!--cards items-->
    <style name="CardsCustom1" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/blue_card</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--search view-->
    <style name="SearchViewCustom" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/rounded_searchview_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/blue_dark</item>
    </style>


</resources>
            <TextView
                android:id="@+id/titleFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="19sp"
                android:textStyle="bold"
                android:scaleType="fitXY"
                android:textColor="@color/black"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </TextView>
            <ImageView
                android:id="@+id/imgFolder"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_favorite_border_24"
                android:layout_marginStart="20dp"
                android:padding="12dp"
                android:foregroundGravity="right"
                android:clickable="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toStartOf="@id/good_card_number"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/haz_click_para_a_adir_o_quitar_la_carpeta_de_favoritos"
                android:focusable="true">
            </ImageView>
            <TextView
                android:id="@+id/good_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="17sp"
                android:textColor="@color/green_dark"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toStartOf="@id/regular_card_number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>

            <TextView
                android:id="@+id/regular_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="17sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/orange_dark"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toStartOf="@id/wrong_card_number"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>
            <TextView
                android:id="@+id/wrong_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="17sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/red_dark"
                android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
            </TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
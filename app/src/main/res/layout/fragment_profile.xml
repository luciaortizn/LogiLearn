<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">
    <!--aquí hay un menú para volver atrás poner el nombre y poco guardar-->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:backgroundTint="@color/blue_light"
        android:paddingBottom="50dp"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBarCard_profile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:minHeight="?attr/actionBarSize"
            app:title="Editar Perfil"
            app:titleTextColor="@color/black"
            app:menu="@menu/menu_edit_profile"
            app:navigationIcon="@drawable/outline_arrow_back_24" />
        <ImageView
            android:background="@color/blue_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:layout_gravity="center"
            android:minHeight="100dp"
            android:src="@drawable/round_person_24"
            android:contentDescription="Es la imagen de perfil">

        </ImageView>
    </com.google.android.material.appbar.AppBarLayout>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:padding="20dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/edit_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lucía"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:padding="20dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/edit_surname_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ortiz"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:padding="20dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/edit_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo">

        <com.google.android.material.textfield.TextInputEditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lucia1225@gmail.com"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:padding="20dp"
        style="?attr/textInputFilledStyle"
        android:id="@+id/edit_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contraseña">

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345Ts#"
            />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>


</androidx.core.widget.NestedScrollView>


</LinearLayout>
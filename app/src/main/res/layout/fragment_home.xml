<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.common.HomeFragment">
    <!--carousel de cards añadidas recietemente-->
    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:backgroundTint="@color/blue_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="70dp">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:menu="@menu/upper_navigation_menu">
            <TextView
                android:id="@id/txtAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LogiLearn"
                android:textColor="@color/material_on_background_emphasis_high_type"
                android:textSize="18sp"
                android:textStyle="bold"/>

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <!--simula carusel horizontal de carpetas recientes-->
    <TextView
        android:id="@+id/carpetas_recientes_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carpetas recientes"
        android:paddingLeft="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="23dp">

    </TextView>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carpetas_recientes_txt"
        app:layout_constraintBottom_toTopOf="@id/folder_name_text_view">

        <!--colección de recientes-->
        <!--1-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/folder_caruosel"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:minWidth="100dp"
            android:checkable="true"
            style="?attr/materialCardViewElevatedStyle"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="true"
            android:outlineSpotShadowColor="@color/cardview_light_background">
            <!--esta "cardview" muestra las carpetas-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title, secondary and supporting text -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vocabulario"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="40dp"
                        android:minHeight="40dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/baseline_favorite_border_24"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <!--2-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/folder_caruosel1"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:checkable="true"
            android:minWidth="100dp"
            android:clickable="true"
            style="?attr/materialCardViewElevatedStyle"
            android:focusable="true"
            android:outlineSpotShadowColor="@color/cardview_light_background">
            <!--esta "cardview" muestra las carpetas-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verbos"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="40dp"
                        android:minHeight="40dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/baseline_favorite_border_24"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="?android:attr/textColorSecondary"
                        />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewFilledStyle"
        android:id="@+id/folder_name_text_view"
        android:layout_width="match_parent"
        android:padding="30dp"
        android:layout_height="350dp"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="125dp"
        android:outlineSpotShadowColor="@color/cardview_light_background">
        <Button
            style="?attr/materialIconButtonStyle"
            android:id="@+id/iconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="cambiar el idioma"
            app:icon="@drawable/outline_language_24"
            />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <EditText

                android:id="@+id/Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Traduce algo..."
                android:gravity="left|start"
                android:inputType="text"
                android:minHeight="70dp"
                android:singleLine="false"
                android:text="Hola"
                android:typeface="normal"
                app:layout_constraintBottom_toTopOf="@id/Translate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent">

            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:overScrollMode="ifContentScrolls">

                <Button
                    android:id="@+id/Translate"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:padding="15dp"
                    android:text="@string/traducir"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/Synonym"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center_horizontal"
                    android:inputType="text"
                    android:padding="15dp"
                    android:text="Sinónimo"
                    android:textSize="16dp" />
            </LinearLayout>
            <!--debería poner una barra de búsqueda de resultados que no tengan por qué guardarse-->
            <EditText
                android:id="@+id/Translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="Traducción..."
                android:gravity="start"
                android:inputType="text"
                android:minHeight="70dp"
                android:singleLine="false"
                android:text="Hello"
                android:typeface="normal"
                />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="descripción"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:ignore="NotSibling"
        android:src="@drawable/baseline_add_24"
        android:theme="@style/Theme.Material3.DynamicColors.DayNight">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</androidx.constraintlayout.widget.ConstraintLayout>
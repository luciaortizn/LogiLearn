<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Base.Theme.LogiLearnApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/archivo</item>
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_neon</item>
        <item name="colorSecondaryVariant">@color/yellow_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="DividerStyle">
        <item name="android:background">#000000</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:background">@color/black</item>
        <item name="android:elevation">4dp</item>
        <item name="android:theme">@style/AppBarTextStyle.Dark</item>
    </style>
    <style name="AppBarTextStyle.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:tint">@color/blue_light</item> <!-- Color de los iconos -->
    </style>
    <style name="TextInputEditTexCustom">
        <item name="boxStrokeColor">@color/blue_light</item>
        <item name="hintTextColor">@color/blue_light</item>
        <item name="boxBackgroundColor">@color/black</item>
    </style>
    <style name="BackgroundColorsForAuth">
        <item name="android:background">@color/blue_dark</item>
    </style>
    <!--btn-->
    <style name="LargeButtonsCustom" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/yellow_light</item>
    </style>
    <style name="LargeButtonsCustom1" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/red_light</item>
    </style>
    <style name="ElevatedButtonCustom" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/blue_dark</item>
        <item name="android:textColor">@color/yellow_light</item>
    </style>
    <style name="TextViewCustomTitle1" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="android:textColor">@color/blue_light</item>
    </style>
    <!--chip-->
    <style name="ChipCustom">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue_dark</item>
    </style>
    <!--cards items-->
    <style name="CardsCustom1" parent="Widget.Material3.CardView.Elevated">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--search view-->
    <style name="SearchViewCustom" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/rounded_searchview_background_night</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/blue_light</item>
    </style>

</resources>
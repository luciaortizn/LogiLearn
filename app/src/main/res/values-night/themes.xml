<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LogiLearnApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_light</item>
        <item name="colorSecondaryVariant">@color/red_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="DividerStyle">
        <item name="android:background">#000000</item>
    </style>

    <style name="AppBarStyle">
        <item name="android:background">@color/black</item> <!-- Fondo oscuro para modo oscuro -->
        <item name="android:elevation">4dp</item> <!-- ElevaciÃ³n opcional -->
        <item name="android:theme">@style/AppBarTextStyle.Dark</item> <!-- Tema oscuro para contenido del AppBar -->
    </style>

    <style name="AppBarTextStyle.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/blue_light</item>
        <item name="android:tint">@color/blue_light</item> <!-- Color de los iconos -->
    </style>
</resources>